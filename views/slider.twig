<section class="slider">
    <div class="slides">
        {% for slide in slides %}
            <div class="slide" id="slide-{{slide.id}}">
                {% block content %}
                    {% if slide.thumbnail %}
                        <div class="slide_image" style="background-image: url('{{slide.thumbnail.src}}')"></div>
                    {% endif %}
                    <div class="slide_content wrapper">
                        <h3 class="slide_title">
                            {{ slide.title }}
                        </h3>
                        <div class="slide_text">
                            {{ slide.content }}
                        </div>
                    </div>
                {% endblock %}
            </div>
        {% endfor %}
    </div>
</section>